@model VideoRentalSite.Models.user

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Вход</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="label">E-mail или имя</div>
            @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "input-text" } })
                <div class="label">Пароль</div>
            @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "input-text" } })
            @Html.ValidationMessageFor(model => model.user_password, "", new { @class = "text-danger" })


                <input type="submit" value="Войти" class="button" />

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
